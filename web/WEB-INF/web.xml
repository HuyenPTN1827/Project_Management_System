<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>member/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Định nghĩa các servlet -->
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TodoListController</servlet-name>
        <servlet-class>controller.todo.ListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTodoController</servlet-name>
        <servlet-class>controller.todo.CreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTodoController</servlet-name>
        <servlet-class>controller.todo.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTodoController</servlet-name>
        <servlet-class>controller.todo.DeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>controller.admin.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserListController</servlet-name>
        <servlet-class>controller.admin.user.ListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateUserController</servlet-name>
        <servlet-class>controller.admin.user.CreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserController</servlet-name>
        <servlet-class>controller.admin.user.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserController</servlet-name>
        <servlet-class>controller.admin.user.DeleteController</servlet-class>
    </servlet>
    
    <!-- Định nghĩa các servlet-mapping -->
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TodoListController</servlet-name>
        <url-pattern>/todo-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTodoController</servlet-name>
        <url-pattern>/add-todo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateTodoController</servlet-name>
        <url-pattern>/update-todo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTodoController</servlet-name>
        <url-pattern>/delete-todo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserListController</servlet-name>
        <url-pattern>/user-management</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateUserController</servlet-name>
        <url-pattern>/user-management/add-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserController</servlet-name>
        <url-pattern>/user-management/update-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserController</servlet-name>
        <url-pattern>/user-management/delete-user</url-pattern>
    </servlet-mapping>

    <!-- Định nghĩa filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/todo-list/*</url-pattern>
        <url-pattern>/add-todo</url-pattern>
        <url-pattern>/update-todo</url-pattern>
        <url-pattern>/delete-todo</url-pattern>
        <url-pattern>/user-management/*</url-pattern>
    </filter-mapping>

    <!-- Cấu hình session -->
    <session-config>
        <session-timeout>1</session-timeout> <!-- Thời gian hết hạn là 1 phút -->
    </session-config>

    <!-- Định nghĩa error page -->
    <error-page>
        <error-code>403</error-code>
        <location>/member/unauthorized.jsp</location>
    </error-page>
</web-app>
